                            </StackPanel>

                        </Canvas>
                    </Border>
                </StackPanel>
            </StackPanel>


            <StackPanel x:Name="stkPanContiners" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,5" Visibility="Visible">
                <Button x:Name="btnLetterBox0" Height="50" Width="50" FontSize="20" Margin="0,0,5,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnLetterBox1" Height="50" Width="50" FontSize="20" Margin="0,0,5,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnLetterBox2" Height="50" Width="50" FontSize="20" Margin="0,0,5,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnLetterBox3" Height="50" Width="50" FontSize="20" Margin="0,0,5,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnLetterBox4" Height="50" Width="50" FontSize="20" Margin="0,0,5,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnLetterBox5" Height="50" Width="50" FontSize="20" Margin="0,0,5,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnLetterBox6" Height="50" Width="50" FontSize="20" Margin="0,0,5,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnLetterBox7" Height="50" Width="50" FontSize="20" Margin="0,0,5,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnLetterBox8" Height="50" Width="50" FontSize="20" Margin="0,0,0,0" Click="LetterBtn_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
            </StackPanel>


            <TextBlock Name="WordNotFoundTxtBox" Visibility="Collapsed" FontSize="20" Text="" TextAlignment="Center" FontWeight="Bold" Foreground="#FFF0EAEA" Margin="0,100,0,10" />

            <StackPanel x:Name="SPScores" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,0,0,10"  Width="150" BorderThickness="2" BorderBrush="Black" Background="#FFBFBFBF" >
                <TextBlock FontSize="20" Text="HighScore" TextAlignment="Center" FontWeight="Bold" Foreground="#FF3342AD" SelectionHighlightColor="{x:Null}"  />
                <StackPanel Background="White" >
                    <TextBlock Name="UsrScoreTxtBox"  FontSize="20" Text="0" TextAlignment="Center" FontWeight="Bold" Foreground="#FFF31010" SelectionHighlightColor="{x:Null}" />
                </StackPanel>
            </StackPanel>
            
            

            <StackPanel x:Name="SPNextGame" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,10,0,10">
                <Button Name="BtnNxtLvl" Height="30" Width="150" Content="Next Level" BorderThickness="2" Background="#FF3823A0" FontWeight="Bold" Foreground="#FFF0EAEA" Margin="0" Click="BtnNxtLvl_Click" />
            </StackPanel>

            <StackPanel x:Name="SPQuitGame" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,10,0,10">
                <Button Name="BtnQuitLvl" Height="30" Width="150" Content="Quit Game" BorderThickness="2" Background="#FF3823A0" FontWeight="Bold" Foreground="#FFF0EAEA" Margin="0" Click="BtnNxtLvl_Click" />
            </StackPanel>

            <StackPanel x:Name="SPMessage" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Collapsed">
                <TextBlock Height="20" Width="475" Text="Choose Your Best Word From Above" TextAlignment="Center" FontWeight="Bold" Foreground="#FFF0EAEA" SelectionHighlightColor="{x:Null}" />
            </StackPanel>



            <StackPanel Name="SpResetEntrWord" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Visibility="Collapsed">
                <Button x:Name="btnReset" Content="Reset"  Height="50" Width="100"  FontSize="20" Foreground="White" Click="bntReset_Click"
                     Style="{StaticResource ButtonStyle1}"/>

                <TextBox x:Name="txtBoxUsrWord" Height="50" Width="275" FontSize="20" TextAlignment="Center" AcceptsReturn="false" 
                     KeyDown="txtBoxUsrWord_KeyDown" Margin="10,0,10,0"/>

                <Button  x:Name="btnEnterWord" Content="Enter" Height="50" Width="100" FontSize="20" Click="btnEnterWord_Click" 
                     Style="{StaticResource ButtonStyle1}"/>
            </StackPanel>


            <StackPanel Name="SpConstVowel"  Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Visibility="Visible">
                <Button x:Name="btnConsonants" Content="Consonants" Height="50" Width="140" FontSize="20" Click="btnConsonants_Click" Margin="0,0,210,0" 
                    Style="{StaticResource ButtonStyle1}" ClickMode="Press" Foreground="White" FontFamily="Elephant"/>

                <Button x:Name="btnVowels" Content="Vowels" Height="50" Width="140" FontSize="20" Click="btnVowels_Click"

                                    <Line.RenderTransform>
                                        <CompositeTransform x:Name="rotate1" Rotation="0"/>
                                    </Line.RenderTransform>
                                </Line>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Width="170" Height="170" Padding="78,0,0,4" >

            <StackPanel>
                <StackPanel.Resources >
                    <Storyboard x:Name="ShowStoryboardAnimation" >
                        <DoubleAnimation Storyboard.TargetName="clockHand"  Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" From="0" To="180" Duration="0:0:30"/>
                        <DoubleAnimation Storyboard.TargetName="clockHand1"  Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" From="0" To="180" Duration="0:0:30"/>
                    </Storyboard>
                </StackPanel.Resources>
            </StackPanel>

            <StackPanel Margin="0,0,0,5" Orientation="Horizontal" HorizontalAlignment="Center">

                <StackPanel Name="UsersWordsList" Orientation="Vertical" Visibility="Collapsed" MaxHeight="200" MaxWidth="215" Margin="0,0,0,0">
                    <!--Buttons get generated here at runtime with the users words-->
                </StackPanel>

                <StackPanel x:Name="SpClock" Width="170" Height="170" Margin="56,0,56,0" Visibility="Visible">
                    <Border CornerRadius="180" BorderThickness="3" BorderBrush="Black" Background="WhiteSmoke" Width="170" Height="170">
                        <Canvas x:Name="MarkersCanvas" Width="165" Height="165">
                            <StackPanel Width="170" Height="170" Orientation="Horizontal">

                                <Line x:Name="clockHand" X1="10" Y1="-.5" X2="7" Y2="75" StrokeThickness="1.5" Stroke="Black" RenderTransformOrigin="1,1"  VerticalAlignment="Top" 
                                      Width="10" Height="75" Margin="73,8,0,0">
                                    <Line.RenderTransform>
                                        <CompositeTransform x:Name="rotate" Rotation="0"/>
                                    </Line.RenderTransform>
                                </Line>

                                <Line x:Name="clockHand1" X1="-.5" Y1="0" X2="3" Y2="75" StrokeThickness="1.5" Stroke="Black" RenderTransformOrigin="0,1"  VerticalAlignment="Top"

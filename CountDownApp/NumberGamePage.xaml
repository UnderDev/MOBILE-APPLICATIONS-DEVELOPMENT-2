<Page
    x:Class="CountDownApp.NumberGamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CountDownApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="ButtonStyle1" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundTransparentBrush}"/>
            <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}"/>
            <Setter Property="Padding" Value="8,4,8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
            <Setter Property="UseSystemFocusVisuals" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightBaseHighBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightBaseHighBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerDownThemeAnimation Storyboard.TargetName="RootGrid"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle RadiusY="21.583" RadiusX="21.583" Stroke="Black" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF711D3E" Offset="0.006"/>
                                        <GradientStop Color="White" Offset="1"/>
                                        <GradientStop Color="#FFB68B9C" Offset="0.977"/>
                                        <GradientStop Color="#FF87415D" Offset="0.688"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <ContentPresenter x:Name="ContentPresenter" AutomationProperties.AccessibilityView="Raw" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTransitions="{TemplateBinding ContentTransitions}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" Margin="-1,-1,-2,-2" Foreground="White"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Grid.RowSpan="6" VerticalAlignment="Center">
            <Image  x:Name="imgCountDownLogo"
                    Source="Assets/CountDownBg.jpg"
                    Width="Auto"
                    Height="Auto"
                    Stretch="None" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Grid.RowSpan="6" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="0,0,0,5" Orientation="Horizontal">

                <StackPanel>
                    <TextBox x:Name="txtBoxMaths"  TextWrapping="Wrap"  Width="190" Height="140" TextAlignment="Left"
                     IsReadOnly="True" IsEnabled="False" FontSize="20" Padding="40,0,0,0"/>

                    <TextBox x:Name="txtBoxTotal"  TextWrapping="Wrap"  Width="190" Height="55" TextAlignment="Center" Margin="0,5,0,0"
                     IsReadOnly="True" IsEnabled="False" FontSize="35" Text="Total"/>
                </StackPanel>

                <StackPanel Margin="5,0,0,0"  >
                    <TextBox x:Name="txtBoxCountDown"  TextWrapping="Wrap"  Width="190" Height="97" TextAlignment="Center" Padding="0,20,0,0" 
                     IsReadOnly="True" IsEnabled="False" FontSize="40"/>
                    
                    <TextBox  TextWrapping="Wrap"  Width="190" Height="54" TextAlignment="Center"  
                     IsReadOnly="True" IsEnabled="False" FontSize="24" Text="Target" Margin="0,5,0,0" BorderThickness="2" Padding="8"  />
                                  
                    <TextBox x:Name="txtBoxTarget"  TextWrapping="Wrap"  Width="190"  TextAlignment="Center" Padding="0" 
                     IsReadOnly="True" IsEnabled="False" FontSize="31" Text="577"/>
                </StackPanel>
            </StackPanel>


            <StackPanel x:Name="stkPanNum"  Orientation="Horizontal">
                <Button x:Name="btnNumBox0" Height="50" Width="60" FontSize="20" Margin="0,0,5,0" Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnNumBox1" Height="50" Width="60" FontSize="20" Margin="0,0,5,0" Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnNumBox2" Height="50" Width="60" FontSize="20" Margin="0,0,5,0" Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnNumBox3" Height="50" Width="60" FontSize="20" Margin="0,0,5,0" Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnNumBox4" Height="50" Width="60" FontSize="20" Margin="0,0,5,0" Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
                <Button x:Name="btnNumBox5" Height="50" Width="60" FontSize="20"                  Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <StackPanel x:Name="stkPanOperators" Orientation="Horizontal" HorizontalAlignment="Left" Visibility="Collapsed">
                <Button x:Name="btnOpBox0" Height="50" Width="60" FontSize="26" Margin="0,0,5,0" Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B" Content="+"/>
                <Button x:Name="btnOpBox1" Height="50" Width="60" FontSize="26" Margin="0,0,5,0" Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B" Content="-"/>
                <Button x:Name="btnOpBox2" Height="50" Width="60" FontSize="26" Margin="0,0,5,0" Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B" Content="÷"/>
                <Button x:Name="btnOpBox3" Height="50" Width="60" FontSize="26"                  Click="AddBtnContToTxtBox_Click" IsEnabled="False" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B" Content="*"/>
            </StackPanel>

            <StackPanel x:Name="stkPanReset"  Orientation="Horizontal"  HorizontalAlignment="Right" Margin="5,0,0,0" Visibility="Collapsed">
                <Button x:Name="btnReset" Content="Reset" Height="50" Width="125" FontSize="26" IsEnabled="True" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B" Click="btnReset_Click"/>
            </StackPanel>
            </StackPanel>

            <StackPanel x:Name="stkPanNumBtns"  Orientation="Horizontal" Margin="0,5,0,5" Visibility="Visible">
                <Button x:Name="btnLargeNum" Height="50" Width="155" FontSize="24" Margin="0,0,75,0" Click="NumChoiceBtn_Click" HorizontalAlignment="Right" IsEnabled="True" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B" Content="Large Num" />
                <Button x:Name="btnSmallNum" Height="50" Width="155" FontSize="24"                   Click="NumChoiceBtn_Click" IsEnabled="True" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B" Content="Small Num"/>
            </StackPanel>

            <StackPanel x:Name="stkPanEnterBtn" Visibility="Visible">
                <Button x:Name="btnEnter" Height="50" Width="386" FontSize="24"  Click="EnterBtn_Click" IsEnabled="True" BorderBrush="Black" BorderThickness="3" FontFamily="Stencil" Background="#FFCACACA" Foreground="#FF752F4B" 
                    Content="Enter"/>
            </StackPanel>
        </StackPanel>


    </Grid>
</Page>
